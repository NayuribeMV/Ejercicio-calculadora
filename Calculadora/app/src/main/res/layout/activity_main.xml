<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:stretchColumns="0,1,2,3,4">

    <TableRow>
        <TextView android:id="@+id/display" android:layout_marginTop="20dp"  android:text="@string/textoInicio" android:layout_span="4" style="@style/TextoPrincipal"></TextView>
    </TableRow>

    <TableRow>
        <Button android:id="@+id/buttonC" style="@style/ButtonRegular" android:onClick="reiniciaDisplay" android:text="@string/buttonClear"></Button>
        <Button android:id="@+id/buttonSigno" style="@style/ButtonRegular" android:text="@string/buttonSigno"></Button>
        <Button android:id="@+id/buttonPorcentaje"  android:onClick="calculaPorcentaje" style="@style/ButtonRegular" android:text="@string/buttonPorcentaje"></Button>
        <Button android:id="@+id/buttonDivide"  android:onClick="muestraValor" android:text="@string/buttonDivide"  style="@style/ButtonText"></Button>
    </TableRow>

    <TableRow>
        <Button android:id="@+id/button7" android:onClick="muestraValor" style="@style/ButtonRegular" android:layout_marginTop="10dp"  android:text="7"></Button>
        <Button android:id="@+id/button8" android:onClick="muestraValor" style="@style/ButtonRegular" android:layout_marginTop="10dp"  android:text="8"></Button>
        <Button android:id="@+id/button9" android:onClick="muestraValor" style="@style/ButtonRegular" android:layout_marginTop="10dp"  android:text="9"></Button>
        <Button android:id="@+id/buttonMultiplicacion" android:onClick="muestraValor"  android:text="*" android:layout_marginTop="10dp"  style="@style/ButtonText"></Button>
    </TableRow>

    <TableRow>
        <Button android:id="@+id/button4" android:onClick="muestraValor" style="@style/ButtonRegular" android:layout_marginTop="10dp"  android:text="4"></Button>
        <Button android:id="@+id/button5" android:onClick="muestraValor" style="@style/ButtonRegular" android:layout_marginTop="10dp"  android:text="5"></Button>
        <Button android:id="@+id/button6" android:onClick="muestraValor" style="@style/ButtonRegular" android:layout_marginTop="10dp"  android:text="6"></Button>
        <Button android:id="@+id/buttonMenos" android:onClick="muestraValor" android:text="-" android:layout_marginTop="10dp"  style="@style/ButtonText"></Button>
    </TableRow>

    <TableRow>
        <Button android:id="@+id/button1" android:onClick="muestraValor"  style="@style/ButtonRegular" android:layout_marginTop="10dp"  android:text="1"></Button>
        <Button android:id="@+id/button2" android:onClick="muestraValor" style="@style/ButtonRegular" android:layout_marginTop="10dp"  android:text="2"></Button>
        <Button android:id="@+id/button3" android:onClick="muestraValor" style="@style/ButtonRegular" android:layout_marginTop="10dp"  android:text="3"></Button>
        <Button android:id="@+id/buttonMas" android:onClick="muestraValor" android:text="+" android:layout_marginTop="10dp"  style="@style/ButtonText"></Button>
    </TableRow>

    <TableRow>
        <Button android:id="@+id/button0" android:onClick="muestraValor" style="@style/ButtonRegular" android:layout_marginTop="10dp"   android:layout_span="2" android:text="@string/button0"></Button>
        <Button android:id="@+id/buttonPunto" android:onClick="muestraValor" style="@style/ButtonRegular" android:layout_marginTop="10dp"  android:text="."></Button>
        <Button android:id="@+id/buttonIgual" android:onClick="calculaTotal"  android:text="=" android:layout_marginTop="10dp"  style="@style/ButtonText"></Button>
    </TableRow>




</TableLayout>